<UserControl x:Class="HotelResFE.Views.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HotelResFE.Views"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Width="400">
            <Label Content="Username"/>
            <TextBox Text="{Binding Username, Mode=TwoWay}" />
            <Label Content="Password"/>
            <PasswordBox Name="tbxPassword" LostFocus="tbxPassword_LostFocus" />
            <Button Content="Log In" Command="{Binding PostLoginCommand}"></Button>
        </StackPanel>
    </Grid>
</UserControl>
